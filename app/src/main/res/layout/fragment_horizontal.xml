<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorizontalFragment"
    android:background="#fff">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="220dp" />

    <ScrollView
        android:layout_margin="16dp"
        android:layout_marginBottom="48dp"
        android:padding="8dp"
        android:layout_below="@id/tvHarga"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:padding="8dp"
        android:layout_margin="8dp"
        android:id="@+id/iv1"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

        <TextView
            android:padding="8dp"
            android:id="@+id/tv_horizontal_deskripsi"
            android:textColor="#000"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    </ScrollView>

    <Button
        android:elevation="8dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/recycler_view_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Pesan" />

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="29dp"
        android:text="Silahkan Memesan"
        android:textColor="#000" />

</RelativeLayout>